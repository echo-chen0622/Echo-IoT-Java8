<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="UI smoke tests">
    <listeners>
        <listener class-name="org.echoiot.server.msa.ui.listeners.RetryTestListener"/>
    </listeners>
    <test name="Smoke rule chains tests">
        <groups>
            <run>
                <exclude name="broken"/>
            </run>
        </groups>
        <packages>
            <package name="org.echoiot.server.msa.ui.tests.ruleChainsSmoke"/>
        </packages>
    </test>
    <test name="Smoke customers tests">
        <groups>
            <run>
                <exclude name="broken"/>
            </run>
        </groups>
        <packages>
            <package name="org.echoiot.server.msa.ui.tests.customerSmoke"/>
        </packages>
    </test>
    <test name="Smoke device profile tests">
        <groups>
            <run>
                <exclude name="broken"/>
            </run>
        </groups>
        <packages>
            <package name="org.echoiot.server.msa.ui.tests.deviceProfileSmoke"/>
        </packages>
    </test>
    <test name="Smoke asset profile tests">
        <groups>
            <run>
                <exclude name="broken"/>
            </run>
        </groups>
        <packages>
            <package name="org.echoiot.server.msa.ui.tests.assetProfileSmoke"/>
        </packages>
    </test>
</suite>
